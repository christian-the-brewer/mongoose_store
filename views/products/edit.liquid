{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <form action="/products/{{product._id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit {{product.name}}</legend>
            <label class="form-label">Name:</label>
            <input 
                type="text" 
                name="name"  
                class="form-control"
                value="{{product.name}}"
            >
            <label class="form-label">Description:</label>
            <input 
                type="text" 
                name="description" 
                class="form-control"
                value="{{product.description}}"
            >
            <label class="form-label">Image Url:</label>
            <input 
                type="text" 
                name="img" 
                class="form-control"
                value="{{product.img}}"
            >
            <label class="form-label">Price:</label>
            <input 
                type="number" 
                name="price" 
                class="form-control"
                value="{{product.price}}"
            >
            <label class="form-label">Qty:</label>
            <input 
                type="number" 
                name="qty" 
                class="form-control"
                value="{{product.qty}}"
            >

            
        </fieldset>
        <div class="btn-group">
            <input type="submit" value="Edit {{ product.name }}" class="btn btn-success">
            <a href="/products" class="btn btn-warning">Nevermind</a>
        </div>
    </form>
</div>
{% endblock %}